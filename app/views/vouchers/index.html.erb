<p id="notice"><%= notice %></p>

<h1>Vouchers</h1>

<table>
  <thead>
    <tr>
      <th>Voucher code</th>
      <th>Voucher type</th>
      <th>Voucher value</th>
      <th>Voucher value remaining</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= voucher.voucher_code %></td>
        <td><%= voucher.voucher_type %></td>
        <td><%= voucher.voucher_value %></td>
        <td><%= voucher.voucher_value_remaining %></td>
        <td><%= link_to 'Show', voucher %></td>
        <td><%= link_to 'Edit', edit_voucher_path(voucher) %></td>
        <td><%= link_to 'Destroy', voucher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

